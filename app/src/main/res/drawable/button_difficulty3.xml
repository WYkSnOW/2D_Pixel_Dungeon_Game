<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#F44336" />
            <gradient
                android:angle="0"
                android:startColor="#B24336"
                android:centerColor="#B24336"
                android:endColor="#B24336"
                android:type="linear"/>
            <corners android:radius="30dp" />
            <stroke
                android:width="1dp"
                android:color="#FF3729"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>